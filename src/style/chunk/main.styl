html
	width 100%
	height 100%
	min-width 320px

body
	width inherit
	height inherit
	min-width inherit
	margin 0
	padding 0
	font-size 16px
	line-height 1.5em
	font-family 'Arial', sans-serif
	font-weight 400
	font-style normal
	color textcolor
	
.background
	position relative
	width 100%
	height 100%
	background-color bgcolor
	&:hover
		background-color hovercolor
	
.cards
	position absolute
	top 20px
	left 30px
	box-sizing border-box
	width calc(960px + 60px)
	height calc(100% - 40px)
	@media screen and (max-width 1080px)
		width calc(100% - 60px)
		min-width 260px
	
	&__item
		position absolute
		top 0
		left 0
		width 400px
		height 100%
		background-color #fff
		box-shadow 0 0 8px rgba(0,0,0,0.2)
		@media screen and (max-width 460px)
			width 100%
		
		&:last-child
			margin-left 60px
		
		&:first-child
			margin-left 0	
			
		&--wide:last-child
			width calc(100% - 60px)
			max-width 960px
			
		&::after
			position absolute
			content attr(data-count)
			top calc(50% - 51px)
			left calc(50% - 51px)
			display flex
			justify-content center
			align-items center
			width 102px
			height 102px
			box-sizing border-box
			font-size 48px
			font-weight 700
			color textcolor
			border 4px solid textcolor
			border-radius 50%